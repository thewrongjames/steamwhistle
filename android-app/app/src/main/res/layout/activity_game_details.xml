<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameDetailsTopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/gameDetailsBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:contentDescription="@string/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gameDetailsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/app_name"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameDetailsBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gameDetailsTopBar"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_box"
            android:text="@string/details_tip"
            android:textColor="@color/beige"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gameTitle"/>

        <TextView
            android:id="@+id/gameTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip"
            android:textSize="50sp"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameTitle"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gamePriceTitle"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/current_price"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/gameThresholdTitle"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/current_threshold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titles"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gamePrice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="40sp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/gameThreshold"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="numberDecimal"
                android:background="@null"
                android:textSize="40sp"
                android:layout_weight="1"
                android:textAlignment="center"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prices"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/save"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>