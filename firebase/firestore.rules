rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{uid}/watchlist/{appId} {
      allow read, write:
        if request.auth != null
        && request.auth.uid == uid
        && exists(/databases/$(database)/documents/games/$(appId))
        && request.resource.data.size() == 2
        && 'appId' in request.resource.data
        && request.resource.data.appId is int
        && request.resource.data.appId >= 0
        && 'threshold' in request.resource.data
        && request.resource.data.threshold is int
        && request.resource.data.threshold >= 0
        && string(request.resource.data.appId) == appId;
    }

    match /users/{uid} {
      allow read, write:
        if request.auth != null
        && request.auth.uid == uid
    }

    match /users/{uid}/devices/{guid} {
      allow read, write:
        if request.auth != null
        && request.auth.uid == uid
    }
  }
}